@{
    Layout = "_MeetSyncLayout";
    ViewData["Title"] = "Toplantı: " + ViewBag.RoomName;
}

<header class="flex items-center justify-between px-6 py-3 border-b border-white/5 bg-background-dark/50 backdrop-blur-sm z-20">
    <div class="flex items-center gap-4">
        <div class="size-8 bg-primary rounded-lg flex items-center justify-center">
            <span class="material-symbols-outlined text-white text-xl">hub</span>
        </div>
        <div>
            <h1 class="text-white text-sm font-bold leading-tight tracking-tight uppercase opacity-60">MeetSync Pro</h1>
            <h2 class="text-white text-base font-semibold leading-tight">Oda: @ViewBag.RoomName</h2>
        </div>
    </div>
    
    <button id="toggleParticipants" class="px-4 py-2 rounded-full bg-white/5 border border-white/10 flex items-center gap-2 hover:bg-white/10 transition-all cursor-pointer">
        <span class="material-symbols-outlined text-xs text-primary">groups</span>
        <span id="participant-count" class="text-xs font-bold text-white">1 Katılımcı</span>
    </button>
</header>

<main class="flex h-[calc(100vh-64px)] overflow-hidden bg-[#050505] relative font-display">
    
    <div class="flex-1 relative flex items-center justify-center p-12 overflow-hidden">
        <div id="video-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 w-full max-w-[1500px] auto-rows-max items-center">
            
            <div id="local-container" class="relative group rounded-[2.5rem] overflow-hidden bg-zinc-900 aspect-video shadow-[0_20px_50px_rgba(0,0,0,0.5)] border border-white/5 transition-all hover:border-primary/40">
                <video id="localVideo" autoplay muted playsinline class="w-full h-full object-cover bg-black"></video>
                <div class="absolute bottom-6 left-6 px-4 py-2 rounded-2xl bg-black/40 backdrop-blur-xl border border-white/10">
                    <span id="local-name-label" class="text-[10px] font-black tracking-[0.2em] text-white uppercase cursor-pointer hover:text-primary transition-colors" onclick="changeMyName()">
                        @ViewBag.UserName (SİZ)
                    </span>
                </div>
            </div>

        </div>

        <div class="fixed bottom-12 left-1/2 -translate-x-1/2 glass-morphism rounded-[3rem] px-10 py-6 flex items-center gap-8 z-50 shadow-[0_32px_64px_-16px_rgba(0,0,0,0.8)] border border-white/10">
            <div class="flex items-center gap-4 border-r border-white/10 pr-8">
                <button id="btn-mic" class="size-14 rounded-3xl bg-white/5 hover:bg-white/10 flex items-center justify-center text-white transition-all active:scale-90"><span class="material-symbols-outlined text-2xl">mic</span></button>
                <button id="btn-cam" class="size-14 rounded-3xl bg-white/5 hover:bg-white/10 flex items-center justify-center text-white transition-all active:scale-90"><span class="material-symbols-outlined text-2xl">videocam</span></button>
            </div>
            <button id="btn-share" class="size-14 rounded-3xl bg-white/5 hover:bg-white/10 flex items-center justify-center text-white"><span class="material-symbols-outlined text-2xl">present_to_all</span></button>
            <button onclick="toggleSidebar('chat')" class="size-14 rounded-3xl bg-primary/20 text-primary flex items-center justify-center border border-primary/20"><span class="material-symbols-oriented text-2xl">chat_bubble</span></button>
            <div class="pl-2 flex gap-3">
                <button id="btn-end-meeting" class="hidden h-14 px-8 rounded-3xl bg-orange-600 hover:bg-orange-700 flex items-center gap-2 text-white font-black tracking-tighter transition-all shadow-2xl shadow-orange-600/30" onclick="endMeetingConfirm()">
                    <span class="material-symbols-outlined text-xl">close</span>
                    TOPLANTIYI BİTİR
                </button>
                <button onclick="leaveMeeting()" class="h-14 px-10 rounded-3xl bg-red-600 hover:bg-red-700 flex items-center gap-3 text-white font-black tracking-tighter transition-all shadow-2xl shadow-red-600/30">
                    <span class="material-symbols-outlined">call_end</span> AYRIL
                </button>
            </div>
        </div>
    </div>

    <aside id="participants-panel" class="hidden w-[400px] bg-[#0c0c0e] border-l border-white/5 flex flex-col shrink-0">
        <div class="p-8 border-b border-white/5 flex items-center justify-between">
            <div>
                <h3 class="font-black text-sm tracking-[0.2em] text-white/60">KATILIMCILAR</h3>
                <p class="text-xs text-slate-500 mt-1" id="participantsPanelCount">Odadaki kişi sayısı: 1</p>
            </div>
            <button id="closeParticipants" class="text-white/40 hover:text-white transition-colors">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>
        <div id="participant-list" class="flex-1 overflow-y-auto p-6">
            <ul id="participants-ul" class="space-y-3">
            </ul>
        </div>
    </aside>

    <aside id="sidebar" class="w-[400px] bg-[#0c0c0e] border-l border-white/5 flex flex-col shrink-0">
        <div class="p-8 border-b border-white/5 flex items-center justify-between">
            <h3 class="font-black text-sm tracking-[0.2em] text-white/60">SOHBET</h3>
            <span class="material-symbols-outlined text-white/20">more_horiz</span>
        </div>
        <div id="chat-messages" class="flex-1 overflow-y-auto p-8 space-y-6"></div>
        <div class="p-8 border-t border-white/5 bg-zinc-950/50">
            <div class="relative">
                <input id="chat-input" class="w-full bg-zinc-900 border border-white/10 rounded-2xl px-6 py-4 text-sm text-white outline-none focus:border-primary/50 transition-all" placeholder="Mesaj gönder..." />
                <button id="btn-send-chat" class="absolute right-3 top-1/2 -translate-y-1/2 size-10 rounded-xl bg-primary flex items-center justify-center shadow-lg"><span class="material-symbols-outlined text-sm">send</span></button>
            </div>
        </div>
    </aside>
</main>

<div id="moderatorModal" class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-[100] flex items-center justify-center p-6">
    <div class="bg-zinc-900 border border-white/10 rounded-3xl p-10 max-w-md w-full shadow-2xl">
        <div class="text-center mb-8">
            <div class="size-16 bg-orange-500/20 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <span class="material-symbols-outlined text-orange-500 text-4xl">warning</span>
            </div>
            <h3 class="text-2xl font-black text-white mb-2">Moderatör Sizsiniz</h3>
            <p class="text-slate-400 text-sm">Ayrılmadan önce yeni bir moderatör seçin veya toplantıyı herkes için sonlandırın.</p>
        </div>

        <div class="space-y-3 mb-6" id="moderatorCandidates">
            @* Moderatör adayları buraya gelecek *@
        </div>

        <div class="flex gap-3">
            <button onclick="cancelLeave()" class="flex-1 h-12 rounded-2xl bg-white/5 hover:bg-white/10 text-white font-bold transition-all">
                Vazgeç
            </button>
            <button onclick="endMeetingForAll()" class="flex-1 h-12 rounded-2xl bg-red-600 hover:bg-red-700 text-white font-bold transition-all">
                Toplantıyı Bitir
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script>
        const roomName = "@ViewBag.RoomName";
        let userName = "@ViewBag.UserName";
        
        document.getElementById('toggleParticipants').addEventListener('click', () => {
            const panel = document.getElementById('participants-panel');
            const chat = document.getElementById('sidebar');
            
            if (panel.classList.contains('hidden')) {
                panel.classList.remove('hidden');
                chat.classList.add('hidden');
            } else {
                panel.classList.add('hidden');
                chat.classList.remove('hidden');
            }
        });

        document.getElementById('closeParticipants').addEventListener('click', () => {
            document.getElementById('participants-panel').classList.add('hidden');
            document.getElementById('sidebar').classList.remove('hidden');
        });

        function toggleSidebar(type) {
            if (type === 'chat') {
                document.getElementById('participants-panel').classList.add('hidden');
                document.getElementById('sidebar').classList.remove('hidden');
            }
        }
    </script>
    <script src="~/js/webrtc.js"></script>
}