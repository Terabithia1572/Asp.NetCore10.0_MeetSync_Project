@{
    Layout = "_MeetSyncLayout";
    ViewData["Title"] = "Meeting: " + ViewBag.RoomName;
}

<header class="flex items-center justify-between px-6 py-3 border-b border-white/5 bg-background-dark/50 backdrop-blur-sm z-20">
    <div class="flex items-center gap-4">
        <div class="size-8 bg-primary rounded-lg flex items-center justify-center">
            <span class="material-symbols-outlined text-white text-xl">hub</span>
        </div>
        <div>
            <h1 class="text-white text-sm font-bold leading-tight tracking-tight uppercase opacity-60">MeetSync Pro</h1>
            <h2 class="text-white text-base font-semibold leading-tight">Room: @ViewBag.RoomName</h2>
        </div>
    </div>
</header>

<main class="flex flex-1 overflow-hidden relative">
    <div class="flex-1 p-6 relative flex flex-col items-center justify-center bg-zinc-950/20">
        <div id="video-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 w-full h-full max-w-[1400px]">
            <div class="relative group rounded-xl overflow-hidden active-speaker-glow bg-zinc-900 aspect-video">
                <video id="localVideo" autoplay muted playsinline class="w-full h-full object-cover"></video>
                <div class="absolute bottom-4 left-4 flex items-center gap-2 px-3 py-1.5 rounded-lg bg-black/40 backdrop-blur-md border border-white/10">
                    <span class="material-symbols-outlined text-sm text-primary">equalizer</span>
                    <span class="text-xs font-semibold">@ViewBag.UserName (You)</span>
                </div>
            </div>
        </div>

        <div class="absolute bottom-8 left-1/2 -translate-x-1/2 glass-morphism rounded-2xl px-6 py-4 flex items-center gap-4 z-30 shadow-2xl">
            <button id="btn-mic" class="size-11 rounded-xl bg-white/5 hover:bg-white/10 flex items-center justify-center text-white transition-all">
                <span class="material-symbols-outlined">mic</span>
            </button>
            <button id="btn-cam" class="size-11 rounded-xl bg-white/5 hover:bg-white/10 flex items-center justify-center text-white transition-all">
                <span class="material-symbols-outlined">videocam</span>
            </button>
            <button id="btn-share" class="size-11 rounded-xl bg-white/5 hover:bg-white/10 flex items-center justify-center text-white transition-all">
                <span class="material-symbols-outlined">present_to_all</span>
            </button>
            <div class="pl-4 border-l border-white/10">
                <button onclick="location.href='/Dashboard'" class="h-11 px-6 rounded-xl bg-red-600 hover:bg-red-700 flex items-center gap-2 text-white font-bold transition-all">
                    <span class="material-symbols-outlined">call_end</span>
                    <span>Leave</span>
                </button>
            </div>
        </div>
    </div>

    <aside class="w-80 bg-zinc-900 border-l border-white/5 flex flex-col shrink-0">
        <div class="p-4 border-b border-white/5 flex items-center justify-between">
            <h3 class="font-bold">In-call Chat</h3>
        </div>
        <div id="chat-messages" class="flex-1 overflow-y-auto p-4 space-y-4">
        </div>
        <div class="p-4 border-t border-white/5">
            <div class="relative">
                <input id="chat-input" class="w-full bg-zinc-950 border border-white/10 rounded-xl px-4 py-3 text-sm text-white outline-none" placeholder="Message..." />
                <button id="btn-send-chat" class="absolute right-2 top-1.5 size-8 rounded-lg bg-primary flex items-center justify-center">
                    <span class="material-symbols-outlined text-lg">send</span>
                </button>
            </div>
        </div>
    </aside>
</main>

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script>
        const roomName = "@ViewBag.RoomName";
        const userName = "@ViewBag.UserName";
    </script>
    <script src="~/js/webrtc.js"></script>
}