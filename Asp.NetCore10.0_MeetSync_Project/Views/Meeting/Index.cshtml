@{
    Layout = "_MeetSyncLayout";
    ViewData["Title"] = "Meeting: " + ViewBag.RoomName;
}

<header class="flex items-center justify-between px-6 py-3 border-b border-white/5 bg-background-dark/50 backdrop-blur-sm z-20">
    <div class="flex items-center gap-4">
        <div class="size-8 bg-primary rounded-lg flex items-center justify-center">
            <span class="material-symbols-outlined text-white text-xl">hub</span>
        </div>
        <div>
            <h1 class="text-white text-sm font-bold leading-tight tracking-tight uppercase opacity-60">MeetSync Pro</h1>
            <h2 class="text-white text-base font-semibold leading-tight">Room: @ViewBag.RoomName</h2>
        </div>
    </div>
    <div class="px-3 py-1 rounded-full bg-white/5 border border-white/10 flex items-center gap-2">
        <span class="material-symbols-outlined text-xs text-primary">groups</span>
        <span id="participant-count" class="text-xs font-bold">1 Participants</span>
    </div>
</header>

<main class="flex flex-1 overflow-hidden relative">
    <div class="flex-1 p-6 relative flex flex-col items-center justify-start bg-zinc-950/20 overflow-y-auto">
        <div id="video-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-[1400px]">
            <div onclick="changeMyName()" class="relative group rounded-xl overflow-hidden active-speaker-glow bg-zinc-900 aspect-video shadow-2xl border border-white/5 cursor-pointer">
                <video id="localVideo" autoplay muted playsinline class="w-full h-full object-cover bg-black"></video>
                <div class="absolute bottom-4 left-4 flex items-center gap-2 px-3 py-1.5 rounded-lg bg-black/60 backdrop-blur-md">
                    <span id="local-name-label" class="text-xs font-semibold text-white">@ViewBag.UserName (You)</span>
                </div>
            </div>
        </div>

        <div class="fixed bottom-8 left-1/2 -translate-x-1/2 glass-morphism rounded-2xl px-6 py-4 flex items-center gap-4 z-50 shadow-2xl">
            <button id="btn-mic" class="size-11 rounded-xl bg-white/5 hover:bg-white/10 flex items-center justify-center text-white transition-all"><span class="material-symbols-outlined">mic</span></button>
            <button id="btn-cam" class="size-11 rounded-xl bg-white/5 hover:bg-white/10 flex items-center justify-center text-white transition-all"><span class="material-symbols-outlined">videocam</span></button>
            <button id="btn-share" class="size-11 rounded-xl bg-white/5 hover:bg-white/10 flex items-center justify-center text-white transition-all"><span class="material-symbols-outlined">present_to_all</span></button>
            <div class="pl-4 border-l border-white/10">
                <button onclick="location.href='/Dashboard'" class="h-11 px-6 rounded-xl bg-red-600 hover:bg-red-700 flex items-center gap-2 text-white font-bold transition-all"><span class="material-symbols-outlined">call_end</span><span>Leave</span></button>
            </div>
        </div>
    </div>

    <aside class="w-80 bg-zinc-900 border-l border-white/5 flex flex-col shrink-0">
        <div class="flex border-b border-white/5">
            <button onclick="switchTab('chat')" class="flex-1 py-4 text-xs font-bold border-b-2 border-primary">CHAT</button>
            <button onclick="switchTab('parts')" class="flex-1 py-4 text-xs font-bold border-b-2 border-transparent opacity-50">PEOPLE</button>
        </div>
        
        <div id="chat-panel" class="flex-1 flex flex-col overflow-hidden">
            <div id="chat-messages" class="flex-1 overflow-y-auto p-4 space-y-4 text-sm"></div>
            <div class="p-4 border-t border-white/5 flex gap-2">
                <input id="chat-input" class="flex-1 bg-zinc-950 border border-white/10 rounded-xl px-4 py-2 text-sm text-white outline-none" placeholder="Message..." />
                <button id="btn-send-chat" class="size-10 rounded-lg bg-primary flex items-center justify-center"><span class="material-symbols-outlined">send</span></button>
            </div>
        </div>

        <div id="parts-panel" class="hidden flex-1 p-4 overflow-y-auto">
            <ul id="participant-list" class="space-y-3">
                <li class="flex items-center gap-3 bg-white/5 p-2 rounded-lg">
                    <div class="size-8 rounded-full bg-primary/20 flex items-center justify-center text-[10px]">YOU</div>
                    <span class="text-sm font-medium">@ViewBag.UserName</span>
                </li>
            </ul>
        </div>
    </aside>
</main>

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script>
        const roomName = "@ViewBag.RoomName";
        const userName = "@ViewBag.UserName";
        function switchTab(tab) {
            document.getElementById('chat-panel').classList.toggle('hidden', tab !== 'chat');
            document.getElementById('parts-panel').classList.toggle('hidden', tab !== 'parts');
        }
    </script>
    <script src="~/js/webrtc.js"></script>
}