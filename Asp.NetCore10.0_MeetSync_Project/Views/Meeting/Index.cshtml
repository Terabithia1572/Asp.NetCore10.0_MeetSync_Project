@{
    Layout = "_MeetSyncLayout";
    ViewData["Title"] = "Toplantı: " + ViewBag.RoomName;
}

<style>
    /* ── TOOLBAR ── */
    .toolbar-wrap {
        position: fixed;
        bottom: 28px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 50;
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 8px 10px;
        background: rgba(9, 9, 11, 0.85);
        backdrop-filter: blur(24px);
        -webkit-backdrop-filter: blur(24px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 28px;
        box-shadow: 0 24px 48px -8px rgba(0,0,0,0.6), 0 0 0 1px rgba(255,255,255,0.03) inset;
        white-space: nowrap;
    }

    .tb-divider {
        width: 1px;
        height: 32px;
        background: rgba(255,255,255,0.07);
        margin: 0 2px;
        flex-shrink: 0;
    }

    /* Icon-only butonlar */
    .tb-icon {
        width: 52px;
        height: 52px;
        border-radius: 16px;
        background: rgba(255,255,255,0.05);
        border: 1px solid rgba(255,255,255,0.07);
        color: #cbd5e1;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.18s cubic-bezier(0.34,1.56,0.64,1);
        flex-shrink: 0;
    }

    .tb-icon:hover { background: rgba(255,255,255,0.1); color: #fff; transform: translateY(-2px); }
    .tb-icon:active { transform: scale(0.92); }

    .tb-icon .material-symbols-outlined {
        font-size: 22px;
        font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }

    .tb-icon.is-on {
        background: #0d59f2;
        border-color: transparent;
        color: #fff;
        box-shadow: 0 8px 20px -4px rgba(13,89,242,0.45);
    }

    .tb-icon.is-off {
        background: rgba(239,68,68,0.12);
        border-color: rgba(239,68,68,0.2);
        color: #f87171;
    }

    /* Chat butonu */
    .tb-chat {
        height: 52px;
        padding: 0 18px;
        border-radius: 16px;
        background: rgba(13,89,242,0.12);
        border: 1px solid rgba(13,89,242,0.2);
        color: #60a5fa;
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        font-weight: 700;
        font-size: 12px;
        letter-spacing: 0.06em;
        text-transform: uppercase;
        transition: all 0.18s cubic-bezier(0.34,1.56,0.64,1);
        flex-shrink: 0;
        position: relative;
    }

    .tb-chat:hover { background: rgba(13,89,242,0.2); color: #93c5fd; transform: translateY(-2px); }

    .tb-chat .material-symbols-outlined {
        font-size: 20px;
        font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }

    .tb-chat .chat-badge {
        display: none;
        position: absolute;
        top: 10px; right: 10px;
        width: 8px; height: 8px;
        background: #0d59f2;
        border-radius: 50%;
        border: 2px solid #09090b;
        animation: badgePulse 1.5s infinite;
    }

    .tb-chat.has-unread .chat-badge { display: block; }

    @@keyframes badgePulse {
        0%,100% { transform: scale(1); }
        50%      { transform: scale(1.3); }
    }

    /* Toplantıyı Bitir */
    .tb-end {
        height: 52px;
        padding: 0 20px;
        border-radius: 16px;
        background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
        border: 1px solid rgba(255,255,255,0.08);
        color: #fff;
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        font-weight: 800;
        font-size: 11px;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        transition: all 0.18s cubic-bezier(0.34,1.56,0.64,1);
        box-shadow: 0 8px 24px -4px rgba(220,38,38,0.4);
        flex-shrink: 0;
    }

    .tb-end:hover { background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); box-shadow: 0 12px 28px -4px rgba(220,38,38,0.55); transform: translateY(-2px); }
    .tb-end:active { transform: scale(0.94); }
    .tb-end .material-symbols-outlined { font-size: 18px; font-variation-settings: 'FILL' 1, 'wght' 500, 'GRAD' 0, 'opsz' 24; }

    /* Ayrıl */
    .tb-leave {
        height: 52px;
        padding: 0 20px;
        border-radius: 16px;
        background: rgba(239,68,68,0.1);
        border: 1px solid rgba(239,68,68,0.18);
        color: #f87171;
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        font-weight: 800;
        font-size: 11px;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        transition: all 0.18s cubic-bezier(0.34,1.56,0.64,1);
        flex-shrink: 0;
    }

    .tb-leave:hover { background: rgba(239,68,68,0.18); border-color: rgba(239,68,68,0.3); color: #fca5a5; transform: translateY(-2px); }
    .tb-leave:active { transform: scale(0.94); }
    .tb-leave .material-symbols-outlined { font-size: 18px; font-variation-settings: 'FILL' 1, 'wght' 500, 'GRAD' 0, 'opsz' 24; }
</style>

<header class="flex items-center justify-between px-6 py-3 border-b border-white/5 bg-background-dark/50 backdrop-blur-sm z-20">
    <div class="flex items-center gap-4">
        <div class="size-8 bg-primary rounded-lg flex items-center justify-center">
            <span class="material-symbols-outlined text-white text-xl">hub</span>
        </div>
        <div>
            <h1 class="text-white text-sm font-bold leading-tight tracking-tight uppercase opacity-60">MeetSync Pro</h1>
            <h2 class="text-white text-base font-semibold leading-tight">Oda: @ViewBag.RoomName</h2>
        </div>
    </div>

    <button id="toggleParticipants" class="px-4 py-2 rounded-full bg-white/5 border border-white/10 flex items-center gap-2 hover:bg-white/10 transition-all cursor-pointer">
        <span class="material-symbols-outlined text-xs text-primary">groups</span>
        <span id="participant-count" class="text-xs font-bold text-white">1 Katılımcı</span>
    </button>
</header>

<main class="flex h-[calc(100vh-64px)] overflow-hidden bg-[#050505] relative font-display">

    <div class="flex-1 relative flex items-center justify-center p-12 overflow-hidden">
        <div id="video-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 w-full max-w-[1500px] auto-rows-max items-center">

            <div id="local-container" class="relative group rounded-[2.5rem] overflow-hidden bg-zinc-900 aspect-video shadow-[0_20px_50px_rgba(0,0,0,0.5)] border border-white/5 transition-all hover:border-primary/40">
                <video id="localVideo" autoplay muted playsinline class="w-full h-full object-cover bg-black"></video>
                <div class="absolute bottom-6 left-6 px-4 py-2 rounded-2xl bg-black/40 backdrop-blur-xl border border-white/10">
                    <span id="local-name-label" class="text-[10px] font-black tracking-[0.2em] text-white uppercase cursor-pointer hover:text-primary transition-colors" onclick="changeMyName()">
                        @ViewBag.UserName (SİZ)
                    </span>
                </div>
            </div>

        </div>

        <!-- ══════════════ YENİ TOOLBAR ══════════════ -->
        <div class="toolbar-wrap" id="meetingToolbar">

            <!-- Mikrofon -->
            <button id="btn-mic" class="tb-icon is-on" title="Mikrofon">
                <span class="material-symbols-outlined" id="mic-icon">mic</span>
            </button>

            <!-- Kamera -->
            <button id="btn-cam" class="tb-icon is-on" title="Kamera">
                <span class="material-symbols-outlined" id="cam-icon">videocam</span>
            </button>

            <div class="tb-divider"></div>

            <!-- Ekran Paylaşımı -->
            <button id="btn-share" class="tb-icon" title="Ekran Paylaş">
                <span class="material-symbols-outlined" id="share-icon">present_to_all</span>
            </button>

            <!-- Sohbet — DÜZELTİLDİ: "oriented" → "outlined" -->
            <button onclick="toggleSidebar('chat')" class="tb-chat" title="Sohbet">
                <span class="material-symbols-outlined">chat_bubble</span>
                <span>Sohbet</span>
                <span class="chat-badge" id="chatBadge"></span>
            </button>

            <div class="tb-divider"></div>

            <!-- Toplantıyı Bitir (sadece host için webrtc.js'de .hidden kaldırılır) -->
            <button id="btn-end-meeting" class="tb-end hidden" onclick="endMeetingConfirm()">
                <span class="material-symbols-outlined">cancel</span>
                <span>Bitir</span>
            </button>

            <!-- Ayrıl -->
            <button onclick="leaveMeeting()" class="tb-leave">
                <span class="material-symbols-outlined">call_end</span>
                <span>Ayrıl</span>
            </button>

        </div>
    </div>

    <!-- Katılımcılar Paneli -->
    <aside id="participants-panel" class="hidden w-[400px] bg-[#0c0c0e] border-l border-white/5 flex flex-col shrink-0">
        <div class="p-8 border-b border-white/5 flex items-center justify-between">
            <div>
                <h3 class="font-black text-sm tracking-[0.2em] text-white/60">KATILIMCILAR</h3>
                <p class="text-xs text-slate-500 mt-1" id="participantsPanelCount">Odadaki kişi sayısı: 1</p>
            </div>
            <button id="closeParticipants" class="text-white/40 hover:text-white transition-colors">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>
        <div id="participant-list" class="flex-1 overflow-y-auto p-6">
            <ul id="participants-ul" class="space-y-3"></ul>
        </div>
    </aside>

    <!-- Sohbet Paneli -->
    <aside id="sidebar" class="w-[400px] bg-[#0c0c0e] border-l border-white/5 flex flex-col shrink-0">
        <div class="p-8 border-b border-white/5 flex items-center justify-between">
            <h3 class="font-black text-sm tracking-[0.2em] text-white/60">SOHBET</h3>
            <span class="material-symbols-outlined text-white/20">more_horiz</span>
        </div>
        <div id="chat-messages" class="flex-1 overflow-y-auto p-8 space-y-6"></div>
        <div class="p-8 border-t border-white/5 bg-zinc-950/50">
            <div class="relative">
                <input id="chat-input" class="w-full bg-zinc-900 border border-white/10 rounded-2xl px-6 py-4 text-sm text-white outline-none focus:border-primary/50 transition-all" placeholder="Mesaj gönder..." />
                <button id="btn-send-chat" class="absolute right-3 top-1/2 -translate-y-1/2 size-10 rounded-xl bg-primary flex items-center justify-center shadow-lg">
                    <span class="material-symbols-outlined text-sm">send</span>
                </button>
            </div>
        </div>
    </aside>
</main>

<!-- Moderatör Modal -->
<div id="moderatorModal" class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-[100] flex items-center justify-center p-6">
    <div class="bg-zinc-900 border border-white/10 rounded-3xl p-10 max-w-md w-full shadow-2xl">
        <div class="text-center mb-8">
            <div class="size-16 bg-red-500/10 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <span class="material-symbols-outlined text-red-500 text-4xl">warning</span>
            </div>
            <h3 class="text-2xl font-black text-white mb-2">Moderatör Sizsiniz</h3>
            <p class="text-slate-400 text-sm">Ayrılmadan önce yeni bir moderatör seçin veya toplantıyı herkes için sonlandırın.</p>
        </div>
        <div class="space-y-3 mb-6" id="moderatorCandidates"></div>
        <div class="flex gap-3">
            <button onclick="cancelLeave()" class="flex-1 h-12 rounded-2xl bg-white/5 hover:bg-white/10 text-white font-bold transition-all">Vazgeç</button>
            <button onclick="endMeetingForAll()" class="flex-1 h-12 rounded-2xl bg-red-600 hover:bg-red-700 text-white font-bold transition-all">Toplantıyı Bitir</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script>
        const roomName = "@ViewBag.RoomName";
        let userName = "@ViewBag.UserName";

        // Panel toggle
        document.getElementById('toggleParticipants').addEventListener('click', () => {
            const panel = document.getElementById('participants-panel');
            const chat  = document.getElementById('sidebar');
            if (panel.classList.contains('hidden')) {
                panel.classList.remove('hidden');
                chat.classList.add('hidden');
            } else {
                panel.classList.add('hidden');
                chat.classList.remove('hidden');
            }
        });

        document.getElementById('closeParticipants').addEventListener('click', () => {
            document.getElementById('participants-panel').classList.add('hidden');
            document.getElementById('sidebar').classList.remove('hidden');
        });

        function toggleSidebar(type) {
            if (type === 'chat') {
                document.getElementById('participants-panel').classList.add('hidden');
                document.getElementById('sidebar').classList.remove('hidden');
            }
        }

        // Toolbar toggles
        document.getElementById('btn-mic').addEventListener('click', () => {
            const btn = document.getElementById('btn-mic');
            const icon = document.getElementById('mic-icon');
            const isOn = btn.classList.contains('is-on');
            btn.classList.toggle('is-on', !isOn);
            btn.classList.toggle('is-off', isOn);
            icon.textContent = isOn ? 'mic_off' : 'mic';
        });

        document.getElementById('btn-cam').addEventListener('click', () => {
            const btn = document.getElementById('btn-cam');
            const icon = document.getElementById('cam-icon');
            const isOn = btn.classList.contains('is-on');
            btn.classList.toggle('is-on', !isOn);
            btn.classList.toggle('is-off', isOn);
            icon.textContent = isOn ? 'videocam_off' : 'videocam';
        });

        document.getElementById('btn-share').addEventListener('click', () => {
            const btn = document.getElementById('btn-share');
            const icon = document.getElementById('share-icon');
            const isOn = btn.classList.contains('is-on');
            btn.classList.toggle('is-on', !isOn);
            icon.textContent = isOn ? 'present_to_all' : 'cancel_presentation';
        });

        // Yeni mesaj gelince webrtc.js içinden çağır: showChatBadge()
        function showChatBadge() {
            document.querySelector('.tb-chat')?.classList.add('has-unread');
        }
    </script>
    <script src="~/js/webrtc.js"></script>
}
