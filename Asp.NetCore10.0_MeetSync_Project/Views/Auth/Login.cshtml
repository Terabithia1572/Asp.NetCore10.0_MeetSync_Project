@using Microsoft.AspNetCore.Http
@{
    Layout = "_MeetSyncLayout";
    ViewData["Title"] = "Giriş Yap";
}

@section Styles {
    <link href="~/login/style.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>
}

<div class="min-h-screen w-full flex items-center justify-center relative overflow-hidden bg-background-dark font-display">
    
    <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none">
        <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-primary/10 rounded-full blur-[120px]"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-primary/5 rounded-full blur-[120px]"></div>
        <div class="absolute inset-0 bg-gradient-radial opacity-50"></div>
    </div>

    <main class="relative z-10 w-full max-w-[440px] px-6 py-12">

        <div class="flex flex-col items-center mb-10">
            <div class="size-14 bg-primary rounded-2xl flex items-center justify-center text-white mb-4 shadow-2xl shadow-primary/30">
                <span class="material-symbols-outlined text-4xl">videocam</span>
            </div>
            <h1 class="text-3xl font-black text-white tracking-tighter">VideoConf Pro</h1>
            <p class="text-slate-500 mt-2 text-sm font-medium tracking-wide uppercase">Uzaktan İş Birliği Platformu</p>
        </div>

        <div class="glass-effect rounded-[2.5rem] p-10 shadow-2xl border border-white/5">

            <div class="mb-10 text-center md:text-left">
                <h2 class="text-2xl font-bold text-white tracking-tight">Tekrar hoş geldiniz</h2>
                <p class="text-slate-500 text-sm mt-2">Giriş yapmak için bilgilerinizi girin.</p>
            </div>

            @* Hata mesajı alanı *@
            <div id="error-container" class="hidden bg-red-500/10 border border-red-500/50 text-red-500 text-xs p-4 rounded-2xl mb-6 text-center animate-pulse">
                <span id="error-text"></span>
            </div>

            @* ✅ AJAX ile submit — sayfa yenilenmeyecek *@
            <form id="loginForm" class="space-y-6" novalidate>

                @Html.AntiForgeryToken()

                <div class="space-y-2">
                    <label class="text-xs font-bold text-slate-400 ml-1 uppercase tracking-widest">E-posta Adresi</label>
                    <div class="relative group">
                        <span class="material-symbols-outlined absolute left-5 top-1/2 -translate-y-1/2 text-slate-500 group-focus-within:text-primary transition-colors">mail</span>
                        <input name="email" id="email" type="email" required
                               class="w-full h-14 pl-14 pr-6 rounded-2xl border border-white/5 bg-zinc-950/50 text-white focus:ring-2 focus:ring-primary/20 outline-none transition-all placeholder:text-zinc-700"
                               placeholder="name@company.com" />
                    </div>
                </div>

                <div class="space-y-2">
                    <div class="flex justify-between items-center px-1">
                        <label class="text-xs font-bold text-slate-400 uppercase tracking-widest">Şifre</label>
                        <a class="text-xs font-bold text-primary hover:text-primary/80 transition-colors" href="#">Şifremi unuttum?</a>
                    </div>
                    <div class="relative group">
                        <span class="material-symbols-outlined absolute left-5 top-1/2 -translate-y-1/2 text-slate-500 group-focus-within:text-primary transition-colors">lock</span>
                        <input name="password" id="password" type="password" required
                               class="w-full h-14 pl-14 pr-14 rounded-2xl border border-white/5 bg-zinc-950/50 text-white focus:ring-2 focus:ring-primary/20 outline-none transition-all placeholder:text-zinc-700"
                               placeholder="••••••••" />
                        <button class="absolute right-5 top-1/2 -translate-y-1/2 text-slate-500 hover:text-white transition-colors"
                                type="button" id="togglePassword">
                            <span class="material-symbols-outlined text-[22px]" id="toggleIcon">visibility</span>
                        </button>
                    </div>
                </div>

                <div class="flex items-center px-1">
                    <input class="w-5 h-5 rounded-lg border-white/10 bg-zinc-950 text-primary focus:ring-primary/20 transition-all"
                           id="remember" type="checkbox" />
                    <label class="ml-3 text-sm font-medium text-slate-400 cursor-pointer" for="remember">
                        30 gün hatırla
                    </label>
                </div>

                <button class="w-full h-14 bg-primary hover:bg-primary/90 text-white font-black rounded-2xl shadow-2xl shadow-primary/20 transition-all active:scale-[0.98] flex items-center justify-center gap-3 mt-4 text-lg"
                        type="submit" id="submitBtn">
                    <span id="btnText">Giriş Yap</span>
                    <span class="material-symbols-outlined text-2xl" id="btnIcon">arrow_forward</span>
                </button>

            </form>

            <div class="relative my-10">
                <div class="absolute inset-0 flex items-center"><span class="w-full border-t border-white/5"></span></div>
                <div class="relative flex justify-center text-[10px] font-black tracking-[0.2em] uppercase">
                    <span class="bg-[#0f172a]/0 px-4 text-slate-600">Veya şununla devam et</span>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <button type="button" class="flex items-center justify-center h-14 border border-white/5 rounded-2xl bg-white/5 hover:bg-white/10 transition-all gap-3 text-sm font-bold text-white">
                    <img alt="Google" class="w-5 h-5" src="https://www.google.com/favicon.ico" />
                    Google
                </button>
                <button type="button" class="flex items-center justify-center h-14 border border-white/5 rounded-2xl bg-white/5 hover:bg-white/10 transition-all gap-3 text-sm font-bold text-white">
                    <span class="material-symbols-outlined text-xl">grid_view</span>
                    Microsoft
                </button>
            </div>

        </div>

        <p class="text-center mt-10 text-slate-500 text-sm font-medium">
            Hesabın yok mu? <a class="text-primary font-bold hover:text-primary/80 transition-all underline underline-offset-4" href="#">Ücretsiz dene</a>
        </p>

    </main>
</div>

@section Scripts {
    <script>
        // ✅ Şifre göster/gizle
        document.getElementById('togglePassword').addEventListener('click', function () {
            const input = document.getElementById('password');
            const icon = document.getElementById('toggleIcon');
            if (input.type === 'password') {
                input.type = 'text';
                icon.textContent = 'visibility_off';
            } else {
                input.type = 'password';
                icon.textContent = 'visibility';
            }
        });

        // ✅ AJAX Login — sayfa yenilenmeden Dashboard'a geç
        document.getElementById('loginForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            const submitBtn = document.getElementById('submitBtn');
            const btnText = document.getElementById('btnText');
            const btnIcon = document.getElementById('btnIcon');
            const errorContainer = document.getElementById('error-container');
            const errorText = document.getElementById('error-text');

            // Hata mesajını gizle
            errorContainer.classList.add('hidden');

            // Basit doğrulama
            if (!email || !password) {
                errorText.textContent = 'Lütfen e-posta ve şifrenizi girin.';
                errorContainer.classList.remove('hidden');
                return;
            }

            // Loading durumu
            btnText.textContent = 'Giriş yapılıyor...';
            btnIcon.textContent = 'hourglass_empty';
            submitBtn.disabled = true;

            try {
                // AntiForgeryToken'ı al
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                // AJAX POST isteği
                const response = await fetch('/Auth/Login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token
                    },
                    body: new URLSearchParams({
                        email: email,
                        password: password,
                        __RequestVerificationToken: token
                    })
                });

                if (response.ok) {
                    // ✅ Başarılı giriş — Dashboard'a yönlendir (sayfa yenilenmeden)
                    window.location.href = '/Dashboard/Index';
                } else {
                    // Hata durumu
                    errorText.textContent = 'Lütfen e-posta ve şifrenizi kontrol ediniz.';
                    errorContainer.classList.remove('hidden');
                }
            } catch (err) {
                console.error('Login error:', err);
                errorText.textContent = 'Bağlantı hatası. Lütfen tekrar deneyin.';
                errorContainer.classList.remove('hidden');
            } finally {
                // Loading durumunu kaldır
                btnText.textContent = 'Giriş Yap';
                btnIcon.textContent = 'arrow_forward';
                submitBtn.disabled = false;
            }
        });
    </script>
}
