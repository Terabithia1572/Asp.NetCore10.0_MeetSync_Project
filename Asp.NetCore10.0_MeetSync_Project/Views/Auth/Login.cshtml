@{
    Layout = "_MeetSyncLayout";
    ViewData["Title"] = "Giriş Yap";
}

<div class="min-h-screen flex items-center justify-center relative overflow-hidden">

    <!-- Background -->
    <div class="absolute inset-0 z-0 overflow-hidden">
        <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-blue-500/10 rounded-full blur-[120px]"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-blue-500/5 rounded-full blur-[120px]"></div>
    </div>

    <main class="relative z-10 w-full max-w-[440px] px-6 py-12">

        <!-- Logo -->
        <div class="flex flex-col items-center mb-10">
            <div class="size-12 bg-blue-600 rounded-xl flex items-center justify-center text-white mb-4 shadow-lg">
                <span class="material-symbols-outlined text-3xl">videocam</span>
            </div>
            <h1 class="text-2xl font-bold tracking-tight">MeetSync</h1>
            <p class="text-gray-400 mt-2 text-sm">Toplantılarınızı senkronize edin</p>
        </div>

        <!-- Card -->
        <div class="bg-[#111827]/80 backdrop-blur-xl border border-white/10 rounded-xl p-8 shadow-2xl">

            <div class="mb-8">
                <h2 class="text-xl font-semibold">Tekrar hoş geldin</h2>
                <p class="text-gray-400 text-sm mt-1">Giriş yapmak için bilgilerini gir</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="bg-red-500/20 text-red-400 p-3 rounded mb-4 text-sm">
                    @ViewBag.Error
                </div>
            }

            <form method="post" class="space-y-5">

                <!-- Username -->
                <div>
                    <label class="block text-sm mb-2">Kullanıcı Adı</label>
                    <input name="username"
                           placeholder="kullaniciadi"
                           class="w-full h-12 px-4 rounded-lg bg-[#1F2937] border border-gray-700 focus:ring-2 focus:ring-blue-500 outline-none" />
                </div>

                <!-- Password -->
                <div>
                    <label class="block text-sm mb-2">Şifre</label>
                    <input name="password"
                           type="password"
                           placeholder="••••••••"
                           class="w-full h-12 px-4 rounded-lg bg-[#1F2937] border border-gray-700 focus:ring-2 focus:ring-blue-500 outline-none" />
                </div>

                <!-- Remember -->
                <div class="flex items-center">
                    <input type="checkbox" class="mr-2">
                    <span class="text-sm text-gray-400">30 gün hatırla</span>
                </div>

                <button class="w-full h-12 bg-blue-600 hover:bg-blue-700 rounded-lg font-semibold transition flex items-center justify-center gap-2">
                    Giriş Yap
                    <span class="material-symbols-outlined text-[20px]">arrow_forward</span>
                </button>

            </form>

        </div>

        <p class="text-center mt-8 text-gray-400 text-sm">
            Hesabın yok mu?
            <a class="text-blue-500 font-semibold hover:underline">Kayıt ol</a>
        </p>

    </main>

</div>
