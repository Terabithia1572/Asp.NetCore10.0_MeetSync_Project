@{
    Layout = "_MeetSyncLayout";
    ViewData["Title"] = "Login";
}

<div class="flex items-center justify-center min-h-screen">

    <div class="bg-[#111827] p-8 rounded-2xl shadow-xl w-96">

        <h2 class="text-2xl font-bold mb-6 text-center">MeetSync Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="bg-red-500 text-white p-2 rounded mb-4 text-center">
                @ViewBag.Error
            </div>
        }

        <form method="post">

            <input name="username"
                   placeholder="Username"
                   class="w-full p-3 mb-4 rounded bg-[#1F2937] border border-gray-700" />

            <input name="password"
                   type="password"
                   placeholder="Password"
                   class="w-full p-3 mb-6 rounded bg-[#1F2937] border border-gray-700" />

            <button class="w-full bg-blue-600 hover:bg-blue-700 p-3 rounded font-semibold">
                Login
            </button>

        </form>

    </div>

</div>
