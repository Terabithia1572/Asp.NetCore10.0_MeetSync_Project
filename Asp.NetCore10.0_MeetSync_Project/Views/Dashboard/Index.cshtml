@{
    Layout = "_MeetSyncLayout";
    ViewData["Title"] = "Lobby";
}

<main class="flex-1 flex flex-col items-center justify-center p-6 lg:p-12 relative overflow-hidden bg-[#09090b]">
    <div class="absolute -top-[10%] -left-[10%] w-[50%] h-[50%] bg-primary/10 rounded-full blur-[120px]"></div>
    <div class="absolute -bottom-[10%] -right-[10%] w-[40%] h-[40%] bg-blue-500/5 rounded-full blur-[120px]"></div>

    <div class="w-full max-w-4xl space-y-12 relative z-10">
        <div class="text-center space-y-4">
            <h2 class="text-primary font-bold text-lg tracking-[0.2em] uppercase">ConnectPro Platform</h2>
            <h3 class="text-5xl md:text-7xl font-black tracking-tighter text-white">Ready to connect?</h3>
            <p class="text-slate-400 text-lg max-w-md mx-auto">Elevate your remote collaboration with high-fidelity sync.</p>
        </div>

        <div class="bg-zinc-900/40 backdrop-blur-2xl border border-white/10 rounded-[2.5rem] p-2 md:p-10 shadow-[0_32px_64px_-12px_rgba(0,0,0,0.5)]">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                
                <div class="space-y-8 p-4">
                    @* ✅ AJAX form — sayfa yenilenmeden Meeting'e geç *@
                    <form id="joinRoomForm" class="space-y-6">
                        @Html.AntiForgeryToken()

                        @* Hata mesajı alanı *@
                        <div id="error-container" class="hidden bg-red-500/10 border border-red-500/50 text-red-500 text-xs p-4 rounded-2xl text-center animate-pulse">
                            <span id="error-text"></span>
                        </div>

                        <div class="space-y-2">
                            <label class="text-sm font-bold text-slate-400 ml-1">MEETING IDENTIFIER</label>
                            <div class="relative group">
                                <span class="material-symbols-outlined absolute left-5 top-1/2 -translate-y-1/2 text-slate-500 group-focus-within:text-primary transition-all">link</span>
                                <input name="roomName" id="roomName" required
                                       class="w-full pl-14 pr-6 py-5 bg-zinc-950/50 border border-white/5 rounded-2xl focus:ring-2 focus:ring-primary/20 outline-none text-white text-lg transition-all placeholder:text-zinc-700"
                                       placeholder="e.g. Design-Sync-2026" />
                            </div>
                        </div>

                        <button type="submit" id="joinBtn"
                                class="w-full bg-primary hover:bg-primary/90 text-white font-black py-5 rounded-2xl shadow-2xl shadow-primary/20 transition-all active:scale-[0.98] flex items-center justify-center gap-3 text-lg">
                            <span class="material-symbols-outlined" id="joinIcon">bolt</span>
                            <span id="joinText">JOIN SESSION</span>
                        </button>
                    </form>
                </div>

                <div class="flex flex-col items-center gap-8 border-l border-white/5 pl-4 md:pl-12 py-4">
                    <div class="flex gap-6">
                        <button id="lobby-mic" onclick="togglePref('mic')" class="size-20 rounded-3xl bg-primary flex items-center justify-center shadow-2xl transition-all hover:rotate-3">
                            <span class="material-symbols-outlined text-white text-4xl">mic</span>
                        </button>
                        <button id="lobby-cam" onclick="togglePref('cam')" class="size-20 rounded-3xl bg-primary flex items-center justify-center shadow-2xl transition-all hover:-rotate-3">
                            <span class="material-symbols-outlined text-white text-4xl">videocam</span>
                        </button>
                    </div>
                    <div class="space-y-3">
                        <div class="flex items-center gap-3 px-4 py-2 bg-green-500/10 rounded-full border border-green-500/20">
                            <span class="size-2.5 rounded-full bg-green-500 animate-pulse"></span>
                            <span class="text-sm font-bold text-green-500 uppercase tracking-widest">Camera Optimized</span>
                        </div>
                        <div class="flex items-center gap-3 px-4 py-2 bg-green-500/10 rounded-full border border-green-500/20">
                            <span class="size-2.5 rounded-full bg-green-500 animate-pulse"></span>
                            <span class="text-sm font-bold text-green-500 uppercase tracking-widest">Mic Connected</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        // Mic/Cam preferences
        localStorage.setItem("pref_mic", "true");
        localStorage.setItem("pref_cam", "true");

        function togglePref(type) {
            let current = localStorage.getItem("pref_" + type) === "true";
            localStorage.setItem("pref_" + type, !current);
            const btn = document.getElementById("lobby-" + type);
            btn.classList.toggle("bg-red-600", current);
            btn.classList.toggle("bg-primary", !current);
            btn.querySelector('span').textContent = type === "mic" ? (current ? "mic_off" : "mic") : (current ? "videocam_off" : "videocam");
        }

        // ✅ AJAX Join Room — sayfa yenilenmeden Meeting'e geç
        document.getElementById('joinRoomForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const roomName = document.getElementById('roomName').value.trim();
            const joinBtn = document.getElementById('joinBtn');
            const joinText = document.getElementById('joinText');
            const joinIcon = document.getElementById('joinIcon');
            const errorContainer = document.getElementById('error-container');
            const errorText = document.getElementById('error-text');

            // Hata mesajını gizle
            errorContainer.classList.add('hidden');

            // Basit doğrulama
            if (!roomName) {
                errorText.textContent = 'Please enter a room name.';
                errorContainer.classList.remove('hidden');
                return;
            }

            // Loading durumu
            joinText.textContent = 'JOINING...';
            joinIcon.textContent = 'hourglass_empty';
            joinBtn.disabled = true;

            try {
                // AntiForgeryToken'ı al
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                // AJAX POST isteği
                const response = await fetch('/Dashboard/JoinRoom', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token
                    },
                    body: new URLSearchParams({
                        roomName: roomName,
                        __RequestVerificationToken: token
                    })
                });

                if (response.ok) {
                    // ✅ Başarılı — Meeting'e yönlendir (sayfa yenilenmeden)
                    window.location.href = '/Meeting/Index?roomName=' + encodeURIComponent(roomName);
                } else {
                    // Hata durumu
                    errorText.textContent = 'Failed to join room. Please try again.';
                    errorContainer.classList.remove('hidden');
                }
            } catch (err) {
                console.error('Join room error:', err);
                errorText.textContent = 'Connection error. Please try again.';
                errorContainer.classList.remove('hidden');
            } finally {
                // Loading durumunu kaldır
                joinText.textContent = 'JOIN SESSION';
                joinIcon.textContent = 'bolt';
                joinBtn.disabled = false;
            }
        });
    </script>
}
